@model MvcMovie.Models.Director

@{
    ViewData["Title"] = "Details";
}


<div class="custom-container">
    <h1 class="page-title">Details</h1>

    <div>
        <h4 class="subheading">Director</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Name)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Name)
            </dd>
        </dl>
    </div>

    <table class="table-area-content mb-3">
        <thead>
            <tr>
                <th>
                    Title
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Movies)
            {
                <tr>
                    <td>
                        @item.Title
                    </td>
                    <td class="director-details-delete">
                        <a asp-action="DeleteMovie" asp-route-id="@item.ID">Delete</a>
                    </td>
                </tr>
             }
        </tbody>
    </table>

    <div>
        <a asp-action="Edit" asp-route-id="@Model.ID" class="back-to-list">Edit</a> |
        <a asp-action="Index" class="back-to-list">Back to List</a>
    </div>
</div>

