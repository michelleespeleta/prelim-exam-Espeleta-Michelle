@model MvcMovie.Models.Director

@{
    ViewData["Title"] = "Create";
}


<div class="custom-container">
    <h1 class="page-title">Create</h1>

    <h4 class="subheading">Director</h4>
    <hr>
    <div class="row fillup-group">
        <div class="col-md-4">
            <form asp-action="Create" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="button-submit"/>
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Index" class="back-to-list">Back to List</a>
    </div>

    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }

</div>
