@model MvcMovie.Models.Director

@{
    ViewData["Title"] = "Edit";
}

<div class="custom-container">
    <h1 class="page-title">Edit</h1>

    <h4 class="subheading">Director</h4>
    <hr/>
    <div class="row fillup-group">
        <div class="col-md-4">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="ID" />
                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <!--Added Code Adding a select dropdown list -->
                <div class="form-group">

                    <label class="control-label">Add Movies</label>
                    <select class="form-control" asp-items="@ViewBag.movies"
                            id="movieSelect" name="movieSelect">
                    </select>
                </div>
                <div class="form-group">
                    <input type="submit" value="Save" class="button-submit" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Index" class="back-to-list">Back to List</a>
    </div>

    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
</div>


